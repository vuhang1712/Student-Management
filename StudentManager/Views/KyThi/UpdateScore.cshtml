
@{
    ViewBag.Title = "Cập nhật điểm thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<StudentManager.Models.DiemViewModel>
<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>

<div id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Quản lý điểm thi</h1>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <b class="m-0 font-weight-bold text-primary">Bảng điểm kỳ thi: @ViewBag.TenKyThi</b>&ensp;
                            @*<a href="" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#exampleModal">Thêm môn học mới</a>*@
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Tên sinh viên</th>
                                            @foreach (var itemMonThi in Model)
                                            {
                                                foreach (var item in itemMonThi.MON_THI1)
                                                {
                                                    <th>@item</th>
                                                }
                                                break;
                                            }

                                            <th hidden>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var itemDiemThi in Model)
                                        {
                                            <tr>
                                                <td>@(Model.IndexOf(itemDiemThi)+1)</td>
                                                <td>
                                                    <h6> @itemDiemThi.NAME</h6>
                                                </td>

                                                @foreach (var itemDiem in itemDiemThi.DIEM)
                                                {
                                                    <td>
                                                        @if (itemDiem != null)
                                                        {
                                                            @itemDiem
                                                        }
                                                        else
                                                        {
                                                            <h6>N/A</h6>
                                                        }
                                                    </td>
                                                }

                                                <td hidden>
                                                    <a href="javascript:void(0)" class="btn btn-sm btn-primary" onclick="">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

</div>