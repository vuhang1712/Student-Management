
@{
    ViewBag.Title = "ThongTinSinhVien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<StudentManager.ConnectDB.SINHVIEN>

<style>

    th {
        color: white;
        text-align: center;
        background-color: Highlight;
        padding: 5px;
    }

    td {
        text-align: center;
    }
</style>


<div class="container">
    <div class="row">

        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Danh sách sinh viên</h3>
                        </div>
                        <div class="col col-xs-6 text-right">

                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table id="table" border="1" width="100%" class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Họ tên</th>
                                <th>Ngày sinh</th>
                                <th>Địa chỉ</th>
                                <th>Email</th>
                                <th>Ngày tạo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(Model.IndexOf(item) + 1)</td>
                                    @if (@item.NAME == null || @item.NAME == "")
                                    {
                                        <td style="color:red">N/A</td>
                                    }
                                    else

                                    {
                                        <td>@item.NAME</td>
                                    }
                                    @if (@item.DateOfBirth == null)
                                    {
                                        <td style="color:red">N/A</td>
                                    }
                                    else
                                    {
                                        <td>@String.Format("{0:dd/MM/yyyy}", @item.DateOfBirth)</td>

                                    }

                                    @if (@item.Address == null || @item.Address == "")
                                    {
                                        <td style="color:red">N/A</td>
                                    }
                                    else
                                    {
                                        <td>@item.Address</td>
                                    }

                                    @if (@item.Email == null || @item.Email == "")
                                    {
                                        <td style="color:red">N/A</td>
                                    }
                                    else
                                    {
                                        <td>@item.Email</td>
                                    }

                                    @if (@item.Date == null)
                                    {
                                        <td style="color:red">N/A</td>
                                    }
                                    else
                                    {
                                        <td>@String.Format("{0:dd/M/yyyy HH:mm:ss}", @item.Date)</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
