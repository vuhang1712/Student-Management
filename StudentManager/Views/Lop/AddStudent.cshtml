@{
    ViewBag.Title = "AddStudent";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}
@model StudentManager.ConnectDB.LOP

<style>
    form {
        margin: 20px;
    }

    b {
        color: red;
    }

    p {
        color: red;
        display: none;
    }
</style>
<form name="myForm" action="/Lop/CreateStudent" method="post" id="form">
    <h3 style="color:darkblue">Nhập thông tin sinh viên:</h3>
    <input type="hidden" class="form-control" name="MA_LOP" value="@Model.MA_LOP">
    <div class="form-group">
        <label>Họ và tên <b>&#8727;</b></label>
        <input type="text" class="form-control" name="NAME">
        <p id="ten">Vui lòng nhập tên</p>
    </div>
    <div class="form-group">
        <label>Ngày sinh <b>&#8727;</b></label>
        <input type="date" class="form-control" name="NGAYSINH">
        <p id="ngaysinh">Vui lòng nhập ngày sinh theo đúng định dạng dd/mm/yyyy</p>
    </div>
    <div class="form-group">
        <label>Địa chỉ</label>
        <textarea type="text" class="form-control" name="DIACHI"></textarea>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="EMAIL">
    </div>
    <button type="reset" class="btn btn-primary">Hoàn tác</button>
    <button type="button" class="btn btn-primary" onclick="validateForm()">Thêm</button>
</form>
<script>
    function validateForm() {
        var ten = document.forms["myForm"]["NAME"].value;
        var ngaysinh = document.forms["myForm"]["NGAYSINH"].value;
        if (ten == "" || ngaysinh == "") {
            var notification1 = document.getElementById("ten");
            var notification2 = document.getElementById("ngaysinh");
            if (ten == "") {
                notification1.style.display = "block";
            } else {
                notification1.style.display = "none";
            }
            if (ngaysinh == "") {
                notification2.style.display = "block";
            } else {
                notification2.style.display = "none";
            }
            return false;
        } else {
            var result = confirm("Bạn có chắc chắn thêm không?");
            if (result == true) {
                document.getElementById("form").submit();
            }
        }
    }
</script>